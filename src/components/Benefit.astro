---
interface Props {
  title: string;
  description: string;
  image: string;
  classes?: {
    figure?: string;
    details?: string;
  };
}

const { title, description, image, classes } = Astro.props;
---

<article
  class="flex flex-col items-center text-center mb-12 md:flex-row md:items-start md:text-left md:gap-12"
>
  <div class={classes?.details}>
    <h3 class="text-gray-900 dark:text-slate-100 text-lg font-bold mb-2">
      {title}
    </h3>
    <p class="text-gray-900 dark:text-slate-100 text-md">
      {description}
    </p>
  </div>
  <figure class={classes?.figure}>
    <img src={image} class="aspect-[4/3] md:aspect-[16/9]" />
  </figure>
</article>
